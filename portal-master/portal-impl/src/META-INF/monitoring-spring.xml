<?xml version="1.0"?>

<beans
	default-destroy-method="destroy"
	default-init-method="afterPropertiesSet"
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd"
>
	<bean class="com.liferay.portal.spring.aop.ChainableMethodAdviceInjector" id="chainableMethodAdviceInjector.serviceMonitorAdvice">
		<property name="injectCondition" value="true" />
		<property name="newChainableMethodAdvice" ref="serviceMonitorAdvice" />
		<property name="parentChainableMethodAdvice" ref="serviceAdvice" />
	</bean>
	<bean class="com.liferay.portal.monitoring.statistics.service.ServiceMonitorAdvice" id="serviceMonitorAdvice" />
</beans>