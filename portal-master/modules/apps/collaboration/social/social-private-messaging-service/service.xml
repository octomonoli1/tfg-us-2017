<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 6.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_6_2_0.dtd">

<service-builder auto-namespace-tables="true" package-path="com.liferay.social.privatemessaging">
	<namespace>PM</namespace>
	<entity local-service="true" name="UserThread" remote-service="true">

		<!-- PK fields -->

		<column name="userThreadId" primary="true" type="long" />

		<!-- Audit fields -->

		<column name="companyId" type="long" />
		<column name="userId" type="long" />
		<column name="userName" type="String" />
		<column name="createDate" type="Date" />
		<column name="modifiedDate" type="Date" />

		<!-- Other fields -->

		<column name="mbThreadId" type="long" />
		<column name="topMBMessageId" type="long" />
		<column name="read" type="boolean" />
		<column name="deleted" type="boolean" />

		<!-- Order -->

		<order by="desc">
			<order-column name="modifiedDate" />
		</order>

		<!-- Finder methods -->

		<finder name="UserId" return-type="Collection">
			<finder-column name="userId" />
		</finder>
		<finder name="MBThreadId" return-type="Collection">
			<finder-column name="mbThreadId" />
		</finder>
		<finder name="U_M" return-type="UserThread">
			<finder-column name="userId" />
			<finder-column name="mbThreadId" />
		</finder>
		<finder name="U_D" return-type="Collection">
			<finder-column name="userId" />
			<finder-column name="deleted" />
		</finder>
		<finder name="U_R_D" return-type="Collection">
			<finder-column name="userId" />
			<finder-column name="read" />
			<finder-column name="deleted" />
		</finder>

		<!-- References -->

		<reference entity="Mail" package-path="com.liferay.mail" />
		<reference entity="Company" package-path="com.liferay.portal" />
		<reference entity="Group" package-path="com.liferay.portal" />
		<reference entity="Layout" package-path="com.liferay.portal" />
		<reference entity="UserNotificationEvent" package-path="com.liferay.portal" />
		<reference entity="MBMessage" package-path="com.liferay.portlet.messageboards" />
	</entity>
</service-builder>