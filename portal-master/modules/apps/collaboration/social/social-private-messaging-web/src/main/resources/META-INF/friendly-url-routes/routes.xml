<?xml version="1.0"?>
<!DOCTYPE routes PUBLIC "-//Liferay//DTD Friendly URL Routes 7.0.0//EN" "http://www.liferay.com/dtd/liferay-friendly-url-routes_7_0_0.dtd">

<routes>
	<route>
		<pattern></pattern>
		<implicit-parameter name="mvcPath">/view.jsp</implicit-parameter>
	</route>
	<route>
		<pattern>/{mvcPath}</pattern>
		<implicit-parameter name="p_p_state">exclusive</implicit-parameter>
	</route>
	<route>
		<pattern>/thread/{mbThreadId:\d+}</pattern>
		<implicit-parameter name="p_p_state">normal</implicit-parameter>
	</route>
	<route>
		<pattern>/thread/{mbThreadId:\d+}/{p_p_state}</pattern>
	</route>
</routes>