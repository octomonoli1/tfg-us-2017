<?xml version="1.0"?>
<!DOCTYPE project>

<project>
	<path id="lang.builder.classpath">
		<fileset dir="../lib" includes="*.jar" />
		<fileset dir="../../../../tools/sdk/dist" includes="com.liferay.lang.builder-*.jar" />
	</path>

	<taskdef classpathref="lang.builder.classpath" resource="com/liferay/lang/builder/ant/taskdefs.properties" />

	<target name="build-lang">
		<build-lang
			langDirName="."
			translateClientId="${microsoft.translator.client.id}"
			translateClientSecret="${microsoft.translator.client.secret}"
		/>
	</target>
</project>